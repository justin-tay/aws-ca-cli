{
  "compilerOptions": {
    "lib": [
      "es2022",
      "DOM"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "types": [
      "vitest/globals"
    ],
    "target": "ES2022",
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ]
}